{
  "post": {
    "summary": "Registra a avaliação de um treino.",
    "tags": ["HU005"],
    "description": "Registra a avaliação do treino realizada pelo usuário (Fácil, Médio, Difícil).",
    "parameters": [
      {
        "name": "userId",
        "in": "path",
        "required": true,
        "description": "Id do usuário.",
        "schema": {
          "type": "string"
        }
      }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "workoutId": {
                "type": "string",
                "description": "Id do treino."
              },
              "rating": {
                "type": "string",
                "description": "Classificação do treino.",
                "enum": ["FACIL", "MEDIO", "DIFICIL"]
              }
            },
            "required": ["workoutId", "rating"]
          }
        }
      }
    },
    "responses": {
      "204": { "description": "Avaliação registrada com sucesso." },
      "400": { "description": "Dados de requisição inválidos." },
      "401": { "description": "Token de autenticação ausente ou inválido." },
      "403": { "description": "Usuário não tem permissão para avaliar treino." },
      "404": { "description": "Usuário ou treino não encontrado." },
      "500": { "description": "Erro interno do servidor." }
    },
    "security": [
      { "bearerAuth": [] }
    ]
}
}