{
"get": {
    "summary": "Gerar relatório do usuário",
    "tags": ["HU008"],
    "description": "Gera um relatório dos dados do usuário no período informado. Permite exportação em PDF ou CSV.",
    "security": [
        { "bearerAuth": [] }
    ],
    "parameters": [
        {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "Id do usuário.",
            "schema": {
                "type": "string"
            }
        },
        {
            "name": "startDate",
            "in": "query",
            "required": true,
            "description": "Data inicial do período (formato dd-MM-yyyy).",
            "schema": {
                "type": "string",
                "format": "date"
            }
        },
        {
            "name": "endDate",
            "in": "query",
            "required": true,
            "description": "Data final do período (formato dd-MM-yyyy).",
            "schema": {
                "type": "string",
                "format": "date"
            }
        },
        {
            "name": "exportAs",
            "in": "query",
            "required": true,
            "description": "Formato de exportação do relatório.",
            "schema": {
                "type": "string",
                "enum": ["PDF", "CSV"]
            }
        }
    ],
    "responses": {
        "200": {
            "description": "Relatório gerado com sucesso.",
            "content": {
                "application/pdf": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "report": {
                                "type": "string",
                                "format": "binary"
                            }
                        }
                    }
                },
                "text/csv": {
                    "schema": {
                        "type": "string",
                        "format": "binary"
                    }
                }
            }
        },
        "400": {
            "description": "Parâmetros de requisição inválidos."
        },
        "401": {
            "description": "Token de autenticação ausente ou inválido."
        },
        "403": {
            "description": "Usuário não tem permissão para gerar relatório."
        },
        "404": {
            "description": "Usuário não encontrado."
        },
        "500": {
            "description": "Erro interno do servidor."
        }
    }
}
}