{
"get": {
    "summary": "Obter preferências de notificações do usuário",
    "tags": ["HU010"],
    "description": "Retorna as preferências de notificações configuradas pelo usuário.",
    "security": [
        { "bearerAuth": [] }
    ],
    "parameters": [
        {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "Id do usuário.",
            "schema": {
                "type": "string"
            }
        }
    ],
    "responses": {
        "200": {
            "description": "Preferências de notificações retornadas com sucesso.",
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "workoutReminder": {
                                "type": ["string", "null"],
                                "format": "time",
                                "description": "Horário do lembrete de treino (ISO 8601) ou null se inativo.",
                                "example": "16:00:00"
                            },
                            "diaryReminder": {
                                "type": ["string", "null"],
                                "format": "time",
                                "description": "Horário do lembrete do diário miccional (ISO 8601) ou null se inativo.",
                                "example": "16:00:00"
                            }
                        }
                    }
                }
            }
        },
        "401": {
            "description": "Token de autenticação ausente ou inválido."
        },
        "403": {
            "description": "Usuário não tem permissão para acessar preferências."
        },
        "500": {
            "description": "Erro interno do servidor."
        }
    }
},
"patch": {
    "summary": "Atualizar preferências de notificações do usuário",
    "tags": ["HU010"],
    "description": "Atualiza as preferências de notificações do usuário.",
    "security": [
        { "bearerAuth": [] }
    ],
    "requestBody": {
        "required": true,
        "content": {
            "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                        "workoutReminder": {
                            "type": ["string", "null"],
                            "format": "time",
                            "description": "Horário do lembrete de treino (ISO 8601) ou null para inativar.",
                            "example": "16:00:00"
                        },
                        "diaryReminder": {
                            "type": ["string", "null"],
                            "format": "time",
                            "description": "Horário do lembrete do diário miccional (ISO 8601) ou null para inativar.",
                            "example": "16:00:00"
                        }
                    }
                }
            }
        }
    },
    "responses": {
        "204": {
            "description": "Preferências atualizadas com sucesso."
        },
        "400": {
            "description": "Dados de requisição inválidos."
        },
        "401": {
            "description": "Token de autenticação ausente ou inválido."
        },
        "403": {
            "description": "Usuário não tem permissão para atualizar preferências."
        },
        "500": {
            "description": "Erro interno do servidor."
        }
    }
}
}