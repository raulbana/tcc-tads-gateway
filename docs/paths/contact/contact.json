{
    "post": {
        "tags": ["HU014"],
        "summary": "Enviar mensagem de contato",
        "security": [{
            "bearerAuth": []
        }],
        "requestBody": {
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "subject": {
                                "type": "string"
                            },
                            "message": {
                                "type": "string"
                            }
                        },
                        "required": ["subject", "message"]
                    }
                }
            }
        },
        "responses": {
            "200": {
                "description": "Mensagem de contato enviada com sucesso"
            },
            "401": {
                "description": "Não autorizado"
            },
            "400": {
                "description": "Erro na validação dos dados"
            },
            "500": {
                "description": "Erro interno do servidor"
            }
        }
    }
}