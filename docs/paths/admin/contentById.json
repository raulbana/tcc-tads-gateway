{
"get": {
    "summary": "Retorna uma publicação de conteúdo educativo.",
    "tags": ["HU001"],
    "description": "Retorna a publicação do id informado com comentários paginados.",
    "security": [
      { "bearerAuth": [] }
    ],
    "parameters": [
        {
            "name": "id",
            "in": "path",
            "description": "Id da publicação.",
            "required": true,
            "schema": {
                "type": "string"
            }
        },
        {
            "name": "limit",
            "in": "query",
            "description": "Quantidade de comentários retornados. Ordenados por data de criação decrescente.",
            "required": false,
            "schema": {
                "type": "integer",
                "default": 50,
                "minimum": 0,
                "maximum": 50
            }
        },
        {
            "name": "offset",
            "in": "query",
            "description": "Número de comentários a serem ignorados.",
            "required": false,
            "schema": {
                "type": "integer",
                "default": 0,
                "minimum": 0
            }
        }
    ],
    "responses": {
        "200": {
            "description": "Publicação retornada com sucesso.",
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            },
                            "text": {
                                "type": "string",
                                "description": "Texto da publicação."
                            },
                            "createdAt": {
                                "type": "string",
                                "format": "date-time",
                                "description": "dd/MM/yyyy hh:mm:ss",
                                "example": "23/08/2025 18:33:00"
                            },
                            "approved": {
                                "type": "boolean"
                            },
                            "coverUrl": {
                                "type": "string",
                                "example": "https://cdn.exemplo.com/capas/123.webp"
                            },
                            "images": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "example": "https://cdn.exemplo.com/capas/123.webp"
                                }
                            },
                            "videos": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "example": "https://cdn.exemplo.com/capas/123.webm"
                                }
                            },
                            "categories": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "comments": {
                                "type": "array",
                                "items": {
                                    "$ref": "../../components/schemas/comment.json"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "400": {
        "description": "Parâmetros de requisição inválidos."
    },
    "401": {
        "description": "Token de autenticação ausente ou inválido."
    },
    "403": {
        "description": "Usuário não tem permissão para acessar este recurso."
    },
    "404": {
        "description": "Publicação não encontrada."
    },
    "500": {
        "description": "Erro interno do servidor."
    }
},
"put": {
    "summary": "Atualiza uma publicação de conteúdo educativo existente.",
    "tags": ["HU003"],
    "description": "Atualiza os dados de uma publicação já cadastrada. As novas imagens e vídeos devem ser enviadas no endpoint de upload.",
    "security": [
        { "bearerAuth": [] }
    ],
    "parameters": [
        {
            "name": "id",
            "in": "path",
            "description": "Id da publicação a ser atualizada.",
            "required": true,
            "schema": {
                "type": "string"
            }
        }
    ],
    "requestBody": {
        "required": true,
        "content": {
            "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "Título da publicação."
                        },
                        "text": {
                            "type": "string",
                            "description": "Texto da publicação."
                        },
                        "categoryIds": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Lista de IDs das categorias associadas à publicação."
                        },
                        "deletedImages": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Links das imagens excluídas."
                        },
                        "deletedVideos": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Links dos vídeos excluídos."
                        }
                    },
                    "required": ["title", "summary", "content", "categoryIds"]
                }
            }
        }
    },
    "responses": {
        "204": {
            "description": "Publicação atualizada com sucesso."
        },
        "400": {
            "description": "Dados de requisição inválidos."
        },
        "401": {
            "description": "Token de autenticação ausente ou inválido."
        },
        "403": {
            "description": "Usuário não tem permissão para atualizar a publicação."
        },
        "404": {
            "description": "Publicação não encontrada."
        },
        "500": {
            "description": "Erro interno do servidor."
        }
    }
},
"delete": {
    "summary": "Remove uma publicação de conteúdo educativo existente.",
    "tags": ["HU003"],
    "description": "Remove permanentemente a publicação identificada pelo id informado.",
    "security": [
        { "bearerAuth": [] }
    ],
    "parameters": [
        {
            "name": "id",
            "in": "path",
            "description": "Id da publicação a ser removida.",
            "required": true,
            "schema": {
                "type": "string"
            }
        }
    ],
    "responses": {
        "204": {
            "description": "Publicação removida com sucesso."
        },
        "400": {
            "description": "Parâmetros de requisição inválidos."
        },
        "401": {
            "description": "Token de autenticação ausente ou inválido."
        },
        "403": {
            "description": "Usuário não tem permissão para remover a publicação."
        },
        "404": {
            "description": "Publicação não encontrada."
        },
        "500": {
            "description": "Erro interno do servidor."
        }
    }
}
}