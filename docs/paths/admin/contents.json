{
"get": {
    "summary": "Retorna uma lista de publicações.",
    "tags": ["HU001"],
    "description": "Retorna uma lista de publicações com parâmetros opcionais de paginação e ordenação por data de criação decrescente. Retorna somente os dados essenciais para apresentar na tela de pesquisar conteúdo (admin).",
    "security": [
      { "bearerAuth": [] }
    ],
    "parameters": [
        {
            "name": "limit",
            "in": "query",
            "description": "Quantidade de publicações de conteúdo educativo retornadas.",
            "required": false,
            "schema": {
                "type": "integer",
                "default": 20,
                "minimum": 10,
                "maximum": 60
            }
        },
        {
            "name": "offset",
            "in": "query",
            "description": "Número de publicações a serem ignoradas.",
            "required": false,
            "schema": {
                "type": "integer",
                "default": 0,
                "minimum": 0
            }
        },
        {
            "name": "title",
            "in": "query",
            "description": "Texto a ser procurado nos títulos das publicações. Não é necessário informar o título completo ou exato, pois a busca é por proximidade.",
            "required": false,
            "schema": {
                "type": "string"
            }
        },
        {
            "name": "category",
            "in": "query",
            "description": "Categoria de publicação a ser procurada.",
            "required": false,
            "schema": {
                "type": "string"
            }
        }
    ],
    "responses": {
        "200": {
            "description": "Lista de publicações retornada com sucesso.",
            "content": {
                "application/json": {
                    "schema": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "title": {
                                    "type": "string"
                                },
                                "summary": {
                                    "type": "string",
                                    "description": "Primeiros 50 caracteres da publicação."
                                },
                                "createdAt": {
                                    "type": "string",
                                    "format": "date-time",
                                    "description": "dd/MM/yyyy hh:mm:ss",
                                    "example": "23/08/2025 18:33:00"
                                },
                                "updatedAt": {
                                    "type": "string",
                                    "format": "date-time",
                                    "description": "dd/MM/yyyy hh:mm:ss",
                                    "example": "23/08/2025 18:33:00"
                                },
                                "approved": {
                                    "type": "boolean"
                                },
                                "coverUrl": {
                                    "type": "string",
                                    "example": "https://cdn.exemplo.com/capas/123.webp"
                                },
                                "category": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "400": {
            "description": "Parâmetros de requisição inválidos."
        },
        "401": {
            "description": "Token de autenticação ausente ou inválido."
        },
        "403": {
            "description": "Usuário não tem permissão para acessar este recurso."
        },
        "500": {
            "description": "Erro interno do servidor."
        }
    }
},
"post": {
    "summary": "Cria uma nova publicação de conteúdo educativo.",
    "description": "Cria uma publicação de conteúdo educativo no sistema. O upload de mídias deve ser feito em outro endpoint.",
    "tags": ["HU003"],
    "security": [
        { "bearerAuth": [] }
    ],
    "requestBody": {
        "required": true,
        "content": {
            "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "Título da publicação.",
                            "required": true
                        },
                        "text": {
                            "type": "string",
                            "description": "Conteúdo completo da publicação.",
                            "required": true
                        },
                        "categoryIds": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Lista de IDs das categorias associadas à publicação.",
                            "required": true
                        }
                    }
                }
            }
        }
    },
    "responses": {
        "201": {
            "description": "Publicação criada com sucesso.",
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "400": {
            "description": "Dados de requisição inválidos."
        },
        "401": {
            "description": "Token de autenticação ausente ou inválido."
        },
        "403": {
            "description": "Usuário não tem permissão para criar publicação."
        },
        "500": {
            "description": "Erro interno do servidor."
        }
    }
}
}