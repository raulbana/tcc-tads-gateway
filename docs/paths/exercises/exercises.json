{
"get": {
    "summary": "Retorna uma lista de exercícios.",
    "tags": ["HU001 - Pesquisar Conteúdo"],
    "description": "Retorna uma lista de exercícios com parâmetros opcionais de paginação e ordenação por data de criação decrescente. Retorna somente os dados essenciais para apresentar na tela de pesquisar conteúdo (admin).",
    "security": [
      { "bearerAuth": [] }
    ],
    "parameters": [
        {
            "name": "limit",
            "in": "query",
            "description": "Quantidade de exercícios retornados.",
            "required": false,
            "schema": {
                "type": "integer",
                "default": 20,
                "minimum": 10,
                "maximum": 60
            }
        },
        {
            "name": "offset",
            "in": "query",
            "description": "Número de exercícios a serem ignorados.",
            "required": false,
            "schema": {
                "type": "integer",
                "default": 0,
                "minimum": 0
            }
        },
        {
            "name": "title",
            "in": "query",
            "description": "Texto a ser procurado nos títulos dos exercícios. Não é necessário informar o título completo ou exato, pois a busca é por proximidade.",
            "required": false,
            "schema": {
                "type": "string"
            }
        },
        {
            "name": "categoryIds",
            "in": "query",
            "description": "Ids das categorias de exercícios a serem procurados.",
            "required": false,
            "schema": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "style": "form",
            "explode": true
        }
    ],
    "responses": {
        "200": {
            "description": "Lista de exercícios retornada com sucesso.",
            "content": {
                "application/json": {
                    "schema": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "title": {
                                    "type": "string"
                                },
                                "duration": {
                                    "type": "string",
                                    "format": "time",
                                    "example": "1:30min"
                                },
                                "createdAt": {
                                    "type": "string",
                                    "format": "date-time",
                                    "description": "dd/MM/yyyy hh:mm:ss",
                                    "example": "23/08/2025 18:33:00"
                                },
                                "categories": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "400": {
            "description": "Parâmetros de requisição inválidos."
        },
        "401": {
            "description": "Token de autenticação ausente ou inválido."
        },
        "403": {
            "description": "Usuário não tem permissão para acessar este recurso."
        },
        "500": {
            "description": "Erro interno do servidor."
        }
    }
},
"post": {
    "summary": "Cria um novo exercício.",
    "description": "Cria um exercício no sistema. O upload de mídias deve ser feito no outro endpoint.",
    "tags": ["HU002 - Manter Exercícios"],
    "security": [
        { "bearerAuth": [] }
    ],
    "requestBody": {
        "required": true,
        "content": {
        "application/json": {
            "schema": {
            "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Título do exercício.",
                        "required": true
                    },
                    "description": {
                        "type": "string",
                        "description": "Descrição do exercício.",
                        "required": true
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Lista de IDs das tags associadas ao exercício.",
                        "required": true
                    }
                }
            }
        }
        }
    },
    "responses": {
        "201": {
            "description": "Exercício criado com sucesso.",
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "400": {
            "description": "Dados de requisição inválidos."
        },
        "401": {
            "description": "Token de autenticação ausente ou inválido."
        },
        "403": {
            "description": "Usuário não tem permissão para criar exercício."
        },
        "500": {
            "description": "Erro interno do servidor."
        }
    }
}
}