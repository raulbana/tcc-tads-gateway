{
"get": {
    "summary": "Lista publicações de conteúdo educativo para o usuário",
    "tags": ["HU012"],
    "description": "Retorna as publicações mais recentes, podendo filtrar por termo ou categoria. Somente publicações aprovadas são mostradas.",
    "parameters": [
    {
        "name": "limit",
        "in": "query",
        "description": "Quantidade de publicações retornadas.",
        "required": false,
        "schema": {
        "type": "integer",
        "default": 20,
        "minimum": 1,
        "maximum": 60
        }
    },
    {
        "name": "offset",
        "in": "query",
        "description": "Número de publicações a serem ignoradas.",
        "required": false,
        "schema": {
        "type": "integer",
        "default": 0,
        "minimum": 0
        }
    },
    {
        "name": "title",
        "in": "query",
        "description": "Termo para busca textual no título.",
        "required": false,
        "schema": {
        "type": ["string", "null"]
        }
    },
    {
        "name": "category",
        "in": "query",
        "description": "Categoria da publicação a ser procurada.",
        "required": false,
        "schema": {
            "type": "string"
        }
    }
    ],
    "security": [
    { "bearerAuth": [] }
    ],
    "responses": {
    "200": {
        "description": "Lista de publicações retornada com sucesso.",
        "content": {
        "application/json": {
            "schema": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                "id": { "type": "string" },
                "title": { "type": "string" },
                "summary": { "type": "string" },
                "createdAt": { "type": "string", "format": "date-time" },
                "updatedAt": { "type": "string", "format": "date-time" },
                "coverUrl": { "type": "string" },
                "category": { "type": "string" },
                "isFavorite": { "type": "boolean" }
                }
            }
            }
        }
        }
    },
    "400": { "description": "Parâmetros de requisição inválidos." },
    "401": { "description": "Token de autenticação ausente ou inválido." },
    "403": { "description": "Usuário não tem permissão para acessar este recurso." },
    "500": { "description": "Erro interno do servidor." }
    }
}
}